<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

        <com.timothypuglia.scumbagpug.GamePanel
        android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pausebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="pauseButtonClicked"
                android:background="@drawable/pauze"
                android:contentDescription="pausebutton"/>

            <Button
                android:id="@+id/mainMenu"

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/buttonshape"
                android:gravity="center"

                android:onClick="menuButtonClicked"
                android:shadowColor="#828F86"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Main Menu"
                android:textColor="#FFFFFF"
                android:textSize="30sp"

                />


        </LinearLayout>


    </FrameLayout>