<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timothypuglia.scumbagpug.Game">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"/>

        <ImageView
            android:id="@+id/background_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/backgroundsmall"/>

        <ImageView
            android:id="@+id/background_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/backgroundsmall"/>

        <ImageView
            android:id="@+id/background_one2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clouds"/>

        <ImageView
            android:id="@+id/background_two2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clouds"/>



        <Button
            android:id="@+id/button"

            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:layout_gravity="center"

            android:onClick="playButtonClicked"
            android:shadowColor="#828F86"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="PLAY"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:fontFamily="monospace"
            android:text="SCUMBAG PUG"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
