<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timothypuglia.scumbagpug.Game">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/background_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/background_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/backgroundsmall" />

        <ImageView
            android:id="@+id/background_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/backgroundsmall" />

        <ImageView
            android:id="@+id/background_one2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clouds" />

        <ImageView
            android:id="@+id/background_two2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clouds" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_margin="20dp"
                android:text="SCUMBAG PUG"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="54sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button"

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonshape"

                android:onClick="playButtonClicked"
                android:shadowColor="#828F86"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="PLAY"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonScore"

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/buttonshape"

                android:onClick="scoreButtonClicked"
                android:shadowColor="#828F86"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Leaderboard"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </LinearLayout>


    </FrameLayout>

</android.support.constraint.ConstraintLayout>
